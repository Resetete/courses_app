<div class="row">
  <div class="col s12">
    <h1 class="center-align"> Course listing </h1>
  </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">

      <div class="card-content white-text">
        <span class="card-title"> <%= link_to "#{course.short_name}: #{course.name}", course_path(course) %> </span>
        <p> <%= course.description %> </p>
      </div>
      <div class="card-action">
        <a href="#">Enroll</a>
        <a href="#">Remove</a>
        <a href="#">Info</a>
      </div>
    </div>
  </div>
  <% end %>
</div>
