<div class="row">
  <div class="col s12">
    <h1 class="center-align"> Course listing </h1>
  </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
  <div class="col s12 m6">
    <div class="card orange">

      <div class="card-content white-text">
        <span class="card-title"> <%= link_to "#{course.short_name}: #{course.name}", course_path(course) %> </span>
        <p> <%= course.description %> </p>
      </div>
      <div class="card-action">
        <% if logged_in? && !(current_user.courses.include?(course)) %>
          <%= link_to 'Enroll', course_enroll_path(course_id: course.id), method: :post, class: 'white space-adder' %>
        <% elsif logged_in? && current_user.courses.include?(course) %>
          <%= link_to 'Remove', '#', class: 'white space-adder' %>
        <% end %>
        <%= link_to 'Info', course_path(course), class: 'white space-adder' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
