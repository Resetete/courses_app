<div class="row">
  <div class="col s12">
    <h1 class="center-align"> Students listing </h1>
  </div>
</div>

<div class="row">
  <% @students.each do |student| %>
  <div class="col s12 m6">
    <div class="card orange lighten">

      <div class="card-content white-text">
        <span class="card-title"> <%= student.name %> </span>
        <p> <%= student.email %> </p>
        <p> COURSE ENROLLMENTS: none </p>
      </div>
      <div class="card-action">
        <%= link_to 'View profile', student_path(student) %>
      </div>
    </div>
  </div>
  <% end %>
</div>
